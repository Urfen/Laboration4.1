<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.arvidbodkth.laboration41.CreateNoteActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:hint="Title"
        android:textSize="25dp"
        android:background="@null"
        android:layout_alignTop="@+id/saveButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:hint="Enter the text body"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/body"
        android:background="@null"
        android:layout_below="@+id/viewImageButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateText"
        android:hint="Enter the date"
        android:background="@null"
        android:textSize="18dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_action_image"
        android:onClick="imageButtonClicked"
        android:background="@null"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/saveButton"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:src="@drawable/ic_action_save"
        android:onClick="saveButtonClicked"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewImageButton"
        android:src="@drawable/ic_action_collections"
        android:background="@null"
        android:onClick="viewImageButtonClicked"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/body" />

</RelativeLayout>
